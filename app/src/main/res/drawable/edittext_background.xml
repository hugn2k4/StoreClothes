<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền của EditText -->
    <solid android:color="#FFFFFF" /> <!-- Màu trắng -->

    <!-- Viền của EditText -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Màu viền xám nhạt -->

    <!-- Bo góc của EditText -->
    <corners android:radius="8dp" /> <!-- Bo góc 8dp -->

    <!-- Hiệu ứng đổ bóng (tùy chọn) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
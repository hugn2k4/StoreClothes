<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="rounded_button_style">
        <item name="cornerSize">50%</item>
    </style>
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:minHeight">10dp</item>
        <item name="android:minWidth">10dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:progressTint">@color/purple_main</item>
        <item name="android:secondaryProgressTint">@color/purple_main</item>
        <item name="android:progressBackgroundTint">@color/background_gray</item>
    </style>
    <style name="DialogSlideAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_bottom_sheet_gray"
    android:gravity="center_horizontal"
    android:layout_marginBottom="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sort By"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/color_text"
            android:gravity="center" />

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close" />
    </LinearLayout>

    <!-- Sort Options -->
    <LinearLayout
        android:id="@+id/optionNone"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@drawable/selected_item_background"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="None"
            android:textSize="16sp"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/checkNone"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/optionHighToLow"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@drawable/selectable_item_background"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="	High to Low"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/checkHighToLow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/optionLowToHigh"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@drawable/selectable_item_background"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="	Low to High"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/checkLowToHigh"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/optionNewest"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@drawable/selectable_item_background"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Newest"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/checkNewest"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Apply Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnApplySort"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="24dp"
        android:text="Apply"
        android:textColor="@color/white"
        android:backgroundTint="@color/purple_main"
        android:textAllCaps="false"
        app:shapeAppearanceOverlay="@style/rounded_button_style" />
</LinearLayout>
